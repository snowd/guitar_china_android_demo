<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        style="@style/BoardItemGroup"
        android:id="@+id/board_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="group" />
    
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/board_title"
            android:layout_toLeftOf="@+id/board_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
        	android:textSize="@dimen/board_list_item_title"
            android:text="title" />
        
        <TextView
            android:id="@+id/board_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
        	android:textSize="@dimen/board_list_item_today"
        	android:textColor="#0099cc"
            android:text="today" />
        
        <TextView
            android:id="@+id/board_description"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_title"
            android:text="desc" />
        
        <TextView
            android:id="@+id/board_threads"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_description"
        	android:textColor="#ff8800"
            android:text="threads" />
        
        <TextView
            android:id="@+id/board_posts"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_description"
            android:layout_toRightOf="@+id/board_threads"
        	android:textColor="#ff8800"
            android:text="posts" />
        
    </RelativeLayout>

</LinearLayout>
